<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roomCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_bottom"
    android:layout_marginTop="@dimen/card_margin_top"
    android:layout_marginLeft="@dimen/card_margin_left"
    android:layout_marginRight="@dimen/card_margin_right"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:layoutDirection="ltr"
    android:stateListAnimator="@anim/touch_ripple"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:id="@+id/roomImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="room Image"
            tools:src="@drawable/room"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/roomName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:textSize="@dimen/text_size_large"
                android:textStyle="normal"
                tools:text="Building name" />

            <View
                android:id="@+id/roomDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/roomDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="20"
                android:padding="8dp"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal"
                tools:text="Opening Time"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
